<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AoController</servlet-name>
        <servlet-class>controller.entity.AoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MuaController</servlet-name>
        <servlet-class>controller.entity.BuyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Insert_Chi_tiet_don_hangController</servlet-name>
        <servlet-class>controller.entity.Insert_Chi_tiet_don_hangController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteDon_Hang</servlet-name>
        <servlet-class>controller.entity.Delete_Don_Hang</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthenticationController</servlet-name>
        <servlet-class>controller.auth.AuthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeauthenticationController</servlet-name>
        <servlet-class>controller.auth.DeauthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ThongKeController</servlet-name>
        <servlet-class>controller.entity.ThongKeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AoController</servlet-name>
        <url-pattern>/ao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MuaController</servlet-name>
        <url-pattern>/mua</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Insert_Chi_tiet_don_hangController</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteDon_Hang</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthenticationController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeauthenticationController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ThongKeController</servlet-name>
        <url-pattern>/thongke</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
